<def-group>

  <definition class="compliance" id="enterprise_app_mode_travel" version="1">
    <metadata>
      <title>Set Enterprise Application to travel mode</title>
      <affected family="unix">
        <platform>multi_platform_all</platform>
      </affected>
      <description>Travel mode should be enabled when operating outiside of intranet.</description>
    </metadata>
    <criteria>
      <criterion test_ref="test_enterprise_app_mode_travel" />
    </criteria>
  </definition>

  <ind:textfilecontent54_test comment="check mode of enterprise application" id="test_enterprise_app_mode_travel" version="1"
      check="all" check_existence="all_exist" >
    <ind:object object_ref="object_enterprise_app_mode_travel" />
    <ind:state state_ref="state_enterprise_app_mode_travel" />
  </ind:textfilecontent54_test>

  <ind:textfilecontent54_object id="object_enterprise_app_mode_travel" comment="get the app mode" version="1">
    <ind:filepath>/etc/enterprise_app/app.conf</ind:filepath>
    <ind:pattern operation="pattern match">^[\s]*mode (.*)</ind:pattern>
    <ind:instance datatype="int" operation="greater than or equal">1</ind:instance>
  </ind:textfilecontent54_object>

  <ind:textfilecontent54_state id="state_enterprise_app_mode_travel" version="1">
    <ind:subexpression operation="equals" datatype="string">travel</ind:subexpression>
  </ind:textfilecontent54_state>

</def-group>
